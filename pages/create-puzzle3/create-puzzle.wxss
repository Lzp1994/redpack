/* pages/create-puzzle3/create-puzzle.wxss */
page{
  background: #d96347;
  height:100%;
  position: relative;
}
.mask{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  display: flex;
  /* flex-direction: column; */
  align-items: center;
  background-color: rgba(0, 0, 0, .4)
}
.mask-box{
  margin: 0 auto;
  width:80%;
  /* height:500rpx; */
  border-radius: 5px;
  background: #fff;
  z-index: 10;
}
.mask-title{
  font-size: 32rpx;
  padding:20rpx 0;
}
.mask-title + .mask-title{
  border-top: 1px solid #ddd;
}
.mask-title text{
  margin-left: 30rpx;
}
.main{
  padding:80rpx 36rpx 0 36rpx;
  position: relative;
}
.home{
  position: absolute;
  width:50rpx;
  height:50rpx;
  top:10rpx;
  right:28rpx;
}
.home text{
  font-size: 50rpx;
  color:#fff;
}
.puzzle-info{
   padding:0 32rpx; 
  background: #fdfaed;
  border-radius: 5px;
}
.puzzle-info text{
  font-size: 30rpx;
  color: #9e4e44;
}
.puzzle-info .tit{
  padding:20rpx 0;
  border-bottom: 1px solid #fae0b2;
}
.tit .tit-icon{
  width:36rpx;
  height:36rpx;
  float: right;
}
.tit .tit-icon .down{
  font-size: 30rpx;
}
input{
  color: #9e4e44;
  font-size: 30rpx;
}
.line{
  display: flex;
  flex-direction: row;
  padding:20rpx 0;
  border-bottom: 1px solid #fae0b2;
}
.m32{
  margin: 32rpx 0;
  text-align: center;
  font-size: 30rpx;
  color:#f0bf95;
}
.btn{
  width:100%;
  background: #fbdeb0;
  color:#ce4c42;
  font-size: 34rpx;
  text-align: center;
  border-radius: 5px;
  padding:20rpx 0;
}
.img{
  width:404rpx;
  height:384rpx;
  margin:44rpx auto;
}
.img image{
  width:100%;
  height:100%;
}
.tips{
  text-align: center;
}
.tips .jinggao{
  font-size: 20rpx;
  margin-right: 2rpx;
}
.tips text{
  font-size: 18rpx;
  color:#f5cd9e;
  line-height: 5rpx;
}
.radio{
  position: relative;
  color:#f5cd9e;
}
.cover{
  position: absolute;
  top:7rpx;
  left:9rpx;
  z-index: 10;
  background: #fdfaed;
  width:40rpx;
  height:40rpx;
}
 .newRadio{
  position: absolute;
  top:11rpx;
  left:15rpx;
  z-index: 11;
  width:28rpx;
  height:28rpx;
  border: 1px solid #f5cd9e;
  border-radius: 50%;

} 
radio{
    transform:scale(.6);  
}

