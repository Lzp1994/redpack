/**index.wxss**/
page{
  background: #d96347;
  position: relative;
}
.userinfo {
   display: flex;
   flex-direction: column;
   align-items: center;  
}

.userinfo-avatar {
  width: 154rpx;
  height: 154rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname{
  margin-bottom: 35rpx;
}
.sel-img{
  width:484rpx;
  height:305rpx;
  margin-top: 95rpx;
}
text {
  color: #f9c899;
  font-size: 30rpx;
  font-weight: bold;
}
.contact{
  display: flex;
  flex-direction: row;
  margin-top: 131rpx;
  
}
.contact button{
  margin: 0;
  padding: 0;
  background: #d96347;
  border:0;
  border-radius:unset;
  color: #f9c899;
  font-size: 24rpx;
}
.contact button::after{
  transform: scale(0);
}
.contact .icon{
     font-size: 28rpx; 
    margin-top: 16rpx;
    margin-right: 15rpx;
}
.menu{
   position: fixed;
  bottom: 0; 
  width:100%;
  height:125rpx;
  background: #f8ddaf;
  display: flex;
  flex-direction: row;
  overflow: hidden;
}
.menu .menu-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.menu-item .tab-icon{
  font-size: 40rpx;
  margin-top: 25rpx;
}
.menu-item .mt20{
  margin-top: 22rpx;
}
.menu-item text{
  color: #b16447;
  margin-top: 8rpx;
}
