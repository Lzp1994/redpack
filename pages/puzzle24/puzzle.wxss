/* pages/puzzle24/puzzle.wxss */
page{
  margin:0;
  padding: 0;
  width: 100%;
  height:100%;
  background: #1d1110;
}

.puzzle-box{
  width:100%;
  height:80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(0, 0, 0, .7)
}
.puzzle{
  width:620rpx;
  height: 620rpx;
}
.myCanvas{
  position: relative;
  width:620rpx;
  height: 620rpx;
}
.can-box{
  color: #fff;
  border: 1px solid #fff;
  float:left;
  width:200rpx;
  height:200rpx;
}

.alarm-box{
  margin-top: 74rpx;
  width:376rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color:#fff;
  font-size: 32rpx;
  border:1px solid #fff;
  border-radius: 5px;
}
.alarm-box .alarm{
  font-size: 36rpx;
  margin-right: 10rpx;
}
.title{
  margin-top: 28rpx;
  font-size: 32rpx;
  color: #fff;
}
.puzzle{
  margin-top: 50rpx;
}
 .puzzle image{
  width:100%;
  height:100%;
} 
.tips{
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #918983;
}
.btn{
  margin: 0 auto;
  margin-top: 50rpx;
  width:350rpx;
  padding:20rpx 0;
  text-align: center;
  font-size: 36rpx;
  color:#fff;
  background: #393a39;
  border-radius: 5px;
}
.mt20{
  margin-top: 20rpx;
}

	